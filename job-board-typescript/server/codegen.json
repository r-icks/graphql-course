{
    "overwrite": true,
    "schema": "./schema.graphql",
    "generates": {
        "src/generated/schema.ts": {
            "plugins": [
                "typescript",
                "typescript-resolvers"
            ],
            "config":{
                "contextType":"../resolvers#ResolverContext",
                "mappers":{
                    "Company":"../db/types.ts#CompanyEntity",
                    "Job":"../db/types.ts#JobEntity"
                },
                "skipTypename":true
            }
        }
    }
}